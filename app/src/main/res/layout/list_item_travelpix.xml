<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                style="?android:listSeparatorTextViewStyle"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/list_item_travel_photo_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:cropToPadding="true"
        android:padding="4dp"
        />
    <CheckBox
        android:id="@+id/list_item_visit_again_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/list_item_travel_description_text_view"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_travel_photo_image_view"
        android:textStyle="bold"
        tools:text="Travel Pix Description"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/list_item_crime_date_text_view"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_travel_photo_image_view"
        android:layout_below="@id/list_item_travel_description_text_view"
        tools:text="Travel Date"
        android:padding="4dp"/>
    <RatingBar
        android:id="@+id/list_item_crime_rating_bar_view"
        android:layout_below="@id/list_item_crime_date_text_view"
        android:layout_toRightOf="@id/list_item_travel_photo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>